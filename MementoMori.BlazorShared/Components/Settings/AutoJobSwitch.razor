    }

    public bool AutoJob__AutoDrawGachaRelic
    {
        get => WritableGameConfig.Value.AutoJob.AutoDrawGachaRelic;
        set => WritableGameConfig.Update(x => x.AutoJob.AutoDrawGachaRelic = value);
    }

}

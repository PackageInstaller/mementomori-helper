@using MementoMori.Ortega.Share
@using MementoMori.Ortega.Share.Data.Battle
@using MementoMori.Ortega.Share.Master.Data
@using MementoMori.Utils
<MudCard Style="display: inline-block" Elevation="0">
    <MudText Inline="true">
        <b>@EffectGroup.GetName()</b>
    </MudText>
    @foreach (var effect in EffectGroup.GetEffectNames())
    {
        <MudChip T="string" Size="Size.Small">@effect</MudChip>
    }
</MudCard>

@code {

    [Parameter]
    public EffectGroup EffectGroup { get; set; }

    private EffectGroupMB EffectGroupMb { get; set; }

    protected override void OnInitialized()
    {
        EffectGroupMb = Masters.EffectGroupTable.GetById(EffectGroup.EffectGroupId);
    }

}